<?xml version="1.0" encoding="utf-8"?>

<com.xuwakao.mixture.ui.VideoDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mixture="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_red_light"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/headerId"
        mixture:layout_position="above"
        android:background="@color/color_blue"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"></VideoView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I can move"
            android:textColor="@color/color_blue_light"
            android:gravity="center"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footerId"
        mixture:layout_position="below"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I'm waiting to be moved"
            android:textColor="@color/color_green_shine"
            android:gravity="center"></TextView>
    </LinearLayout>

</com.xuwakao.mixture.ui.VideoDragLayout><!-- From: file:/Users/duowan/Desktop/xuwakao/android-example/mixtureProject/mixture/src/main/res/layout/fragment_video.xml -->